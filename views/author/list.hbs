<div>
  <h1>Authors</h1>
      <table class="book-container">
        <thead>
          <tr class="titles-info">
            <th>Name</th>
            <th>Country</th>
            <th>Year of Born</th>
            <th>edit</th>
          </tr>
        </thead>
        <tbody>
        {{#each data}}
          <tr> 
            <td>{{this.name}} </td>
            <td>{{this.country}}</td>
            <td>{{this.yearBorn}}</td>
            <td> <a href="/author/{{this.id}}/edit">Edit Author</a></td>
          </tr>
        {{/each}}
        </tbody>
      </table>
</div>